<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Livro</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="font-awesome-4.7.0/font-awesome-4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="style/style.css">
  </head>
  <body>
    <div class="container-fluid">
      <div class="row flex-nowrap">
        <%- include('./navbar.ejs', { activePage: '' }) %>
      </div>
      <div class="col py-3">
        <div class="justify-content-center">
          <h1 class="register-title"> Informações do empréstimo </h1>
        </div>
        <form id="emprestimoForm" method="post">
          <div class="form-row">
            <div class="form-row">

          </div>
          <div class="form-row">
            <div class="form-group col-md-8">
              <label for="inputUsuario">Usuario</label>
              <select id="inputUsuario" class="form-control" name="inputUsuario" required>
                <% usuarios.forEach((usuario)=> { %>
                  <option  <%= emprestimo.id_usuario === usuario.id_usuario ? 'selected' : '' %> value="<%=usuario.id_usuario %>"><%=usuario.nome%></option>
                <% }); %> 
              </select>
            </div>
            <div class="form-group col-md-8">
                <label for="inputLivro">Livro</label>
                <select id="inputLivro" class="form-control" name="inputLivro" required>
                  <% livros.forEach((livro)=> { %>
                    <option  <%= emprestimo.id_livro === livro.ISBN ? 'selected' : '' %> value="<%=livro.ISBN %>"><%=livro.titulo%></option>
                  <% }); %> 
                </select>
              </div>
            <div class="form-group col-md-4">
              <label for="inputDataEmprestimo">Data do emprestimo:</label>
              <input type="date" class="form-control" id="inputDataEmprestimo" name="inputDataEmprestimo" value="<%=emprestimo.data_emprestimo%>" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputDataDevolucao">Data da devolução:</label>
                <input type="date" class="form-control" id="inputDataDevolucao" name="inputDataDevolucao" value="<%=emprestimo.data_devolucao%>" required>
              </div>
          </div>
          <div class="form-row">
            <div class="col-auto">
              <button type="submit" class="btn btn-outline-success" onclick="submitForm('/editarEmprestimo')">Salvar</button>
            </div>
            <div class="col-auto">
              <button type="button" class="btn btn-outline-danger" onclick="submitForm('/excluirEmprestimo/<%=emprestimo.id_emprestimo%>')">Excluir</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <script>
      function submitForm(action) {
        const form = document.getElementById('emprestimoForm');
        form.action = action;
        form.submit();
      }
    </script>
  </body>
</html>